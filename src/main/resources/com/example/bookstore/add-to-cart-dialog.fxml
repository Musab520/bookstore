<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <Label text="How many Books to add to cart?" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Spinner fx:id="quantitySpinner" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="priceLabel" text="100" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button text="Add to Cart" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Button text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </children>
</GridPane>
