<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <VBox alignment="CENTER" spacing="10">
          <children>
              <Label styleClass="title-label" text="Add Book" />
      
              <HBox spacing="10">
         <children>
                     <Label text="Title:" />
                     <TextField fx:id="titleField" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label text="Author:" />
                     <TextField fx:id="authorField" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label text="Publisher:" />
                     <TextField fx:id="publisherField" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label text="Row:" />
                     <TextField fx:id="rowField" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label text="Shelf:" />
                     <TextField fx:id="shelfField" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label text="Cost:" />
                     <TextField fx:id="costField" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label text="Price:" />
                     <TextField fx:id="priceField" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label text="Count:" />
                     <TextField fx:id="countField" />
         </children>
              </HBox>
      
              <Button fx:id="addButton" text="Add" />
          </children>
       </VBox>
   </children>
</AnchorPane>
