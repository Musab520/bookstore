<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bookstore.application.controller.AddBookController">
    <VBox alignment="CENTER" spacing="10">
        <Label text="Add Book" styleClass="title-label" />

        <HBox spacing="10">
            <Label text="Title:" />
            <TextField fx:id="titleField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Author:" />
            <TextField fx:id="authorField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Publisher:" />
            <TextField fx:id="publisherField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Row:" />
            <TextField fx:id="rowField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Shelf:" />
            <TextField fx:id="shelfField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Cost:" />
            <TextField fx:id="costField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Price:" />
            <TextField fx:id="priceField" />
        </HBox>

        <HBox spacing="10">
            <Label text="Count:" />
            <TextField fx:id="countField" />
        </HBox>

        <Button text="Add" onAction="#addBook" />
    </VBox>
</AnchorPane>
